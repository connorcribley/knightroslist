<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/starability.css">
<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img class="card-img-top" src="<%= university.image %>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-bold"><%= university.name %></h5>
                <p class="card-text"><%= university.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary"><%= university.location %></li>
                <li class="list-group-item">In-State Tuition: $<%= university.ISTuition %></li>
                <li class="list-group-item">Out-Of-State Tuition: $<%= university.OOSTuition %></li>
            </ul>
            <% if (currentUser && university.author.equals(currentUser._id)) {%>
            <div class="card-body">
                <a href="/universities/<%= university._id %>/edit" class="card-link btn btn-info">Edit University</a>
                <form class="d-inline" action="/universities/<%= university._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-secondary">
                Submitted by: <%= university.author.username %>
            </div>
        </div>
    </div>
    <div class="col-6">
        <% if (currentUser) { %>
        <h2>Leave a Review:</h2>
        <hr>
        <form action="/universities/<%= university._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
            <div class="mb-3">
                <fieldset class="starability-coinFlip">
                    <legend>Rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <!-- <label class="form-label" for="body">Review</label> -->
                <textarea class="form-control" name="review[body]" id="body" placeholder="Write a review here!" cols="30" rows="3" required></textarea>
                <div class="invalid-feedback">
                    Review cannot be blank.
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% } %>
        <% for (let review of university.reviews) {%>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title text-bold"><%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>">
                    Rated: <%= review.rating %> stars
                </p>
                <p class="card-text"><%= review.body %></p>
                <% if (currentUser && review.author.equals(currentUser._id)) {%>
                <form action="<%= university._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</div>
